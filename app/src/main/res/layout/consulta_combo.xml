<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_consultar_usuarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.estudiante.ConsultaComboActivity">
    <TextView
        android:id="@+id/estudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estudiantes"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccione una OpciÃ³n"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>

    <Spinner
        android:id="@+id/comboPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id: "
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:id="@+id/textIdLabel" />

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textIdLabel"
            android:layout_toEndOf="@+id/textIdLabel"
            android:layout_marginLeft="50sp"
            android:layout_marginStart="50sp"
            android:layout_above="@+id/txtNombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:id="@+id/textNombreEtiqueta"
            android:layout_above="@+id/textApellidoPEtiqueta"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textNombreEtiqueta"
            android:layout_alignStart="@+id/txtId"
            android:layout_alignLeft="@+id/txtId"
            android:layout_alignBottom="@+id/textNombreEtiqueta"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:text="" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido Paterno: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:id="@+id/textApellidoPEtiqueta"
            android:layout_below="@+id/textIdLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtApellidoP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textApellidoPEtiqueta"
            android:layout_alignBottom="@+id/textApellidoPEtiqueta"
            android:layout_alignLeft="@+id/txtNombre"
            android:layout_alignStart="@+id/txtNombre" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido Materno: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:id="@+id/textApellidoMEtiqueta"
            android:layout_below="@+id/txtApellidoP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtapellidoM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textApellidoMEtiqueta"
            android:layout_alignBottom="@+id/textApellidoMEtiqueta"
            android:layout_alignLeft="@+id/txtApellidoP"
            android:layout_alignStart="@+id/txtApellidoP" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de Control: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:id="@+id/textNControlEtiqueta"
            android:layout_below="@+id/txtapellidoM"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtnControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textNControlEtiqueta"
            android:layout_alignBottom="@+id/textNControlEtiqueta"
            android:layout_alignLeft="@+id/txtapellidoM"
            android:layout_alignStart="@+id/txtapellidoM" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semestre: "
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="0.5"
            android:id="@+id/textSemestreEtiqueta"
            android:layout_below="@+id/txtnControl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtSemestre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textSemestreEtiqueta"
            android:layout_alignBottom="@+id/textSemestreEtiqueta"
            android:layout_alignLeft="@+id/txtnControl"
            android:layout_alignStart="@+id/txtnControl" />









    </RelativeLayout>

</LinearLayout>